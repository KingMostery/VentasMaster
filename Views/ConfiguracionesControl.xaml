<UserControl x:Class="MasterVentas.Views.ConfiguracionesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="Transparent">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Configuraciones" FontSize="26" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20"/>

            <UniformGrid Columns="2" Margin="0,0,0,20" HorizontalAlignment="Stretch">
                
                <Border Padding="20" Margin="10" Background="White" CornerRadius="8">
                    <Border.Effect>
                        <DropShadowEffect Color="#333" BlurRadius="10" Opacity="0.2" ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel>
                        <materialDesign:PackIcon Kind="AccountPlus" Width="36" Height="36" Foreground="#2196F3"/>
                        <TextBlock Text="Crear Usuario" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,4"/>
                        <Button Content="Abrir" Click="CrearUsuario_Click" Style="{StaticResource MaterialDesignOutlinedButton}"/>
                    </StackPanel>
                </Border>

               
                <Border Padding="20" Margin="10" Background="White" CornerRadius="8">
                    <Border.Effect>
                        <DropShadowEffect Color="#333" BlurRadius="10" Opacity="0.2" ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel>
                        <materialDesign:PackIcon Kind="AccountEdit" Width="36" Height="36" Foreground="#4CAF50"/>
                        <TextBlock Text="Editar Usuario" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,4"/>
                        <Button Content="Abrir" Click="EditarUsuario_Click" Style="{StaticResource MaterialDesignOutlinedButton}"/>
                    </StackPanel>
                </Border>

               
                <Border Padding="20" Margin="10" Background="White" CornerRadius="8">
                    <Border.Effect>
                        <DropShadowEffect Color="#333" BlurRadius="10" Opacity="0.2" ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel>
                        <materialDesign:PackIcon Kind="AccountRemove" Width="36" Height="36" Foreground="#F44336"/>
                        <TextBlock Text="Eliminar Usuario" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,4"/>
                        <Button Content="Abrir" Click="EliminarUsuario_Click" Style="{StaticResource MaterialDesignOutlinedButton}"/>
                    </StackPanel>
                </Border>

                
                <Border Padding="20" Margin="10" Background="White" CornerRadius="8">
                    <Border.Effect>
                        <DropShadowEffect Color="#333" BlurRadius="10" Opacity="0.2" ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel>
                        <materialDesign:PackIcon Kind="FolderPlus" Width="36" Height="36" Foreground="#9C27B0"/>
                        <TextBlock Text="Crear CategorÃ­a" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,4"/>
                        <Button Content="Abrir" Click="CrearCategoria_Click" Style="{StaticResource MaterialDesignOutlinedButton}"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
