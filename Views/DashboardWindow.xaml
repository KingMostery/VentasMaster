<Window x:Class="MasterVentas.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MasterVentas – Menú Principal"
        WindowStartupLocation="CenterScreen"
        Width="1280" Height="720"
        WindowStyle="None"
        Background="#F7F9FC">

    <Grid>

        <!-- Columnas: Drawer + Contenido -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Botón cerrar (parte superior derecha) -->
        <Grid Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0">
            <StackPanel Orientation="Horizontal">
                <Button Click="CerrarAplicacion_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        Width="30"
                        Height="30"
                        ToolTip="Cerrar">
                    <materialDesign:PackIcon Kind="Close" Width="30" Height="30" Opacity="0.6" RenderTransformOrigin="-0.108,-0.034"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Navigation Drawer -->
        <Border Background="#2A2D2E" Grid.Column="0" Margin="10,45,0,10" CornerRadius="10" 
                Effect="{DynamicResource MaterialDesignElevation3}">
            <StackPanel Margin="10">
                <!-- Info Usuario -->
                <TextBlock Text="Usuario" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,5"/>
                <TextBlock x:Name="LblUsuario" 
                           Text="—" 
                           FontSize="16" 
                           Foreground="LightGray" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"/>

                <!-- Botones de Módulo -->
                <Button Name="BtnFacturar" Margin="0,5" Height="45" Style="{StaticResource MaterialDesignFlatButton}" Background="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileDocument" Foreground="White" Width="24" Height="24"/>
                        <TextBlock Text="Facturar" Foreground="White" FontSize="16" Margin="16,0,0,0"/>
                    </StackPanel>
                </Button>

                <Button Name="BtnProductos" Margin="0,5" Height="45" Style="{StaticResource MaterialDesignFlatButton}" Background="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Basket" Foreground="White" Width="24" Height="24"/>
                        <TextBlock Text="Productos" Foreground="White" FontSize="16" Margin="16,0,0,0"/>
                    </StackPanel>
                </Button>

                <Button Name="BtnReportes" Margin="0,5" Height="45" Style="{StaticResource MaterialDesignFlatButton}" Background="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ChartLine" Foreground="White" Width="24" Height="24"/>
                        <TextBlock Text="Reportes" Foreground="White" FontSize="16" Margin="16,0,0,0"/>
                    </StackPanel>
                </Button>

                <Button Name="BtnConfig" Margin="0,5" Height="45" Style="{StaticResource MaterialDesignFlatButton}" Background="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Settings" Foreground="White" Width="24" Height="24"/>
                        <TextBlock Text="Configuración" Foreground="White" FontSize="16" Margin="16,0,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Área de contenido -->
        <Border Grid.Column="1" Margin="0,45,25,10" Background="White" CornerRadius="10" Padding="20"
                Effect="{DynamicResource MaterialDesignElevation2}">
            <Grid>
                <TextBlock Text="Bienvenido al sistema" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="#333" 
                           VerticalAlignment="Top" 
                           Margin="20,20,0,0"/>
            </Grid>
        </Border>
    </Grid>

</Window>
