<UserControl x:Class="MasterVentas.Views.CreateUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="Transparent">
    <Grid Margin="20">
       
        <Border Padding="30"
            Background="White"
            CornerRadius="8"
            Width="400"
            HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="#333" BlurRadius="10" Opacity="0.2" ShadowDepth="2"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Crear Nuevo Usuario"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   Margin="0,0,0,20"/>

              
                <TextBox x:Name="TxtUsername"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Hint="Username"
                 Margin="0,0,0,15"/>

               
                <PasswordBox x:Name="TxtPassword"
                     Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                     materialDesign:HintAssist.Hint="Password"
                     Margin="0,0,0,15"/>

               
                <ComboBox x:Name="CmbRol"
          materialDesign:HintAssist.Hint="Rol"
          Margin="0,0,0,25">
                    <ComboBoxItem Content="Administrador"/>
                    <ComboBoxItem Content="Cajero"/>
                </ComboBox>

                
                <Button Content="Crear Usuario"
                Height="45"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Click="BtnCrearUsuario_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
