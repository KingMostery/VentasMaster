<Window x:Class="MasterVentas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"  
        mc:Ignorable="d"
        Height="645"
        Width="875"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        ResizeMode="NoResize"
        FontFamily="{DynamicResource MaterialDesignFont}"
        FontSize="18"
        >
    <Grid Margin="20">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="30"
                              ShadowDepth="1"  
                              Opacity="0.4"/>
        </Grid.Effect>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.22*"/>
        </Grid.ColumnDefinitions>

        <!--lef Section-->

        <Border Background="#07bf96"
                CornerRadius="10 0 0 10"
                ClipToBounds="True">
            <Border.Clip>
                <RectangleGeometry Rect="0,0,400,605"
                                   RadiusX="10"
                                   RadiusY="10" />
            </Border.Clip>



            <!--Titulos-->

            <StackPanel Margin="0 120 0 0">

                <TextBlock FontSize="46"
                       FontWeight="Light"
                       Text="Ingresar"
                       Foreground="#ffffff"
                       TextAlignment="Center">

                </TextBlock>

                <TextBlock FontWeight="Light"
                       FontSize="15"
                       Foreground="#d1f2eb"
                       TextAlignment="Center"
                       Text="to user all features"
                       Margin="0 15 0 3">

                </TextBlock>

                <TextBlock FontSize="16"
                       FontWeight="Light"
                       Text="of the application"
                       Foreground="#d1f2eb"
                      TextAlignment="Center" >

                </TextBlock>






            </StackPanel>




        </Border>
        <!--Ellipses-->
        <Ellipse
           Height="235"
           VerticalAlignment="Bottom"
           Fill="#5eccb4"
          Margin="-87,0,222,-120" 
           Opacity="0.6"/>
        <!--Ellipses-->
        <Ellipse Width="500"
           Height="500"
           VerticalAlignment="Bottom"
           Fill="#5eccb4"
          Margin="50 0 0 -200" 
           Opacity="0.6">

        </Ellipse>
        <!--Ellipses-->
        <!--Ellipses-->
        <Ellipse Width="500"
           Height="500"
           VerticalAlignment="Bottom"
           Fill="#5eccb4"
          Margin="-320 0 0 -120" 
           Opacity="0.3">

        </Ellipse>
        <!--Ellipses-->
        <Ellipse Width="500"
           Height="500"
           VerticalAlignment="Bottom"
           Fill="#5eccb4"
          Margin="50 0 0 -200" 
           Opacity="0.6">

        </Ellipse>
        <!--Ellipses-->
        <Ellipse Width="500"
           Height="500"
           VerticalAlignment="Bottom"
           Fill="#5eccb4"
          Margin="50 0 0 -200" 
           Opacity="0.6">

        </Ellipse>

        <Ellipse
                Height="270"
                VerticalAlignment="Bottom"
                Fill="#5eccb4"
                Margin="-65,0,146,-71"
                Opacity="0.8" />

        <!--Icono-->
        <Border Background="#fdfdfd"
                CornerRadius="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Height="110"
                Width="110"
                Margin="0 0 0 80"
                >
            <Grid>


                
                
                
                    <!--color Ellipses-->
                <materialDesign:PackIcon Kind="Tick"
                                         Width="70"
                                         Height="70"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center">


                    <materialDesign:PackIcon.Foreground>
                        <LinearGradientBrush >

                            <GradientStop Color="#e27c53" 
                  Offset="0.15"/>

                            <GradientStop Color="#dca530" 
                  Offset="0.2"/>

                            <GradientStop Color="#8bb356" 
                  Offset="0.3"/>

                            <GradientStop Color="#3bb799" 
                  Offset="0.5"/>

                            <GradientStop Color="#67cbee" 
                  Offset="0.5"/>

                            <GradientStop Color="#3699db" 
                  Offset="0.6"/>

                        </LinearGradientBrush>
                    </materialDesign:PackIcon.Foreground>
                 </materialDesign:PackIcon>
                
                <Ellipse Width="100"
                         Height="100"
                         StrokeThickness="4">
                    <Ellipse.Stroke>
                        <LinearGradientBrush >

                            <GradientStop Color="#e27c53" 
                                          Offset="0.15"/>

                            <GradientStop Color="#dca530" 
                                          Offset="0.2"/>

                            <GradientStop Color="#8bb356" 
                                          Offset="0.3"/>

                            <GradientStop Color="#3bb799" 
                                          Offset="0.5"/>

                            <GradientStop Color="#67cbee" 
                                          Offset="0.5"/>

                            <GradientStop Color="#3699db" 
                                          Offset="0.6"/>

                        </LinearGradientBrush>
                    </Ellipse.Stroke>
                </Ellipse>
                
            </Grid>            
        </Border>

    </Grid>
</Window>
